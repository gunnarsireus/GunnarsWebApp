@model GunnarsWebApp.Models.ChangeLastNameViewModel
@{
    ViewBag.Title = "Change LastName";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangeLastName", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change LastName Form</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.OldLastName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.LastNameFor(m => m.OldLastName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewLastName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.LastNameFor(m => m.NewLastName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmLastName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.LastNameFor(m => m.ConfirmLastName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change LastName" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}