@model IEnumerable<GunnarsWebApp.Models.Contact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>
<br/>
<table class="table table-responsive table-bordered">
    <tr>
        <td>
            <h2 class="text-danger">Kontakter - översikt</h2>
            <table class="table table-striped table-bordered">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </table>
            <div class="form-group">
                <div class="col-md-4">
                    @{  string local = "window.location='../../Contact/Create/" + Model.First().EmployeeId + "'";
                        <input type="button" onclick="@local" value="Skapa ny kontakt" onmouseover="this.style.backgroundColor = 'gray'; this.style.color = 'white'; " onmouseout="this.style.backgroundColor = 'white'; this.style.color = 'black'; " style="background - color:White; border - style:Outset; font - family:Verdana; font - size:10px; font - weight:bold; height: 21px; width: 160px; " />
                    }
                </div>
                <div class="col-md-4">
                    <div class="col-md-4">
                         @Html.ActionLink("Tillbaka", "Details", "Employee", new { id = Model.First().EmployeeId }, null)
                    </div>
                </div>
            </div>
        </td>
    </tr>
</table>
