@model IEnumerable<GunnarsWebApp.Models.Address>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>
<br/>
<table class="table table-responsive table-bordered">
    <tr>
        <td>
            <h2  class="text-danger">Adresser - översikt</h2>
            <table class="table table-striped table-bordered">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Street)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Zip)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Street)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Zip)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </table>
            <div class="form-group">
                <div class="col-md-4">
                @{string local = "window.location='../../Address/Create/" + Model.First().EmployeeId + "'";
                    <input type="button" onclick=@local value="Skapa ny adress" onmouseover="this.style.backgroundColor = 'gray'; this.style.color = 'white';" onmouseout="this.style.backgroundColor = 'white'; this.style.color = 'black';" style="background-color:White;border-style:Outset;font-family:Verdana;font-size:10px;font-weight:bold;height:21px;width:160px;" />
                    }
                </div>
            </div>
        </td>
    </tr>
</table>
