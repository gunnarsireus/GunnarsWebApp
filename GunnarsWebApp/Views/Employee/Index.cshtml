@model IEnumerable<GunnarsWebApp.Models.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>
<br/>
<table class="table table-responsive table-bordered">
    <tr>
    <td>
        <h2 class="text-danger">Personal - översikt</h2>
        <table class="table table-striped table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Addresses.First().City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contacts.First().Phone)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @if (item.Addresses.Any())
                        {
                            @Html.DisplayFor(modelItem => item.Addresses.First().City)
                        }
                        else
                        {
                            @Html.Raw("-");
                        }

                    </td>
                    <td>
                        @if (item.Addresses.Any())
                        {
                            @Html.DisplayFor(modelItem => item.Contacts.First().Phone)
                        }
                        else
                        {
                            @Html.Raw("-");
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </table>
        <div class="form-group">
            <div class="col-md-4">
                <input type="button" onclick="window.location='../../Employee/Create'" value="Skapa ny användare" onmouseover="this.style.backgroundColor = 'gray'; this.style.color = 'white';" onmouseout="this.style.backgroundColor = 'white'; this.style.color = 'black';" style="background-color:White;border-style:Outset;font-family:Verdana;font-size:10px;font-weight:bold;height:21px;width:160px;" />
            </div>
        </div>
        </td>
    </tr>
</table>
